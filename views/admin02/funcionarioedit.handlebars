<div class="card">
  <div class="card-body">
    <h3>Editar Funcionário:</h3>
    <form class="" action="/admin02/funcionario/editar" method="POST">

        <label for="nome">Nome:</label>
        <input type="text" name="nome" id="nome" value="{{funcionaios.nome}}"><br>

        <label for="idade">Idade:</label>
        <input type="text" name="idade" id="idade" value="{{funcionarios.idade}}"><br>

        <label for="email">Email:</label>
        <input type="text" name="email" id="email" value="{{funcionarios.email}}"><br>

        <label for="turno">Função:</label>
        <input type="text" name="turno" id="turno" value="{{funcionarios.funcao}}"><br>

        <label for="dataEntrada">Ano de entrada:</label>
        <input type="text" name="dataEntrada" id="dataEntrada" value="{{funcionarios.dataEntrada}}"><br>

        <label for="salario">Salário:</label>
        <input type="text" name="salario" id="salario" value="{{funcionarios.salario}}"><br>

        <label for="turnoTrabalho">Turno:</label>
        <input type="text" name="turnoTrabalho" id="turnoTrabalho" value="{{funcionarios.turnoTrabalho}}"><br>

        <label for="regimeTrabalho">Regime de trabalho:</label>
        <input type="text" name="regimeTrabalho" id="regimeTrabalho" value="{{funcionarios.regimeTrabalho}}"><br>

        <label for="telefone">Telefone de contato:</label>
        <input type="text" name="telefone" id="telefone" value="{{funcionarios.telefone}}"><br>
            <button type="submit" name="button" class="btn btn-success mt-4">Editar</button>
    </form>
  </div>
</div>
