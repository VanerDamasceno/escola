        <input type="text" name="nomePai" id="nomePai" value="{{alunos.nomePai}}">

        <label for="nomeMae">Nome da mãe:</label>
        <input type="text" name="nomeMae" id="nomeMae" value="{{alunos.nomeMae}}">

