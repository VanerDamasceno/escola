<div class="card">
  <div class="card-body">
    <h3>Editar aluno:</h3>
    <form class="" action="/admin/aluno/alunoedit" method="post">


        <label for="nome">Nome:</label>
        <input type="text" name="nome" id="nome" value="{{alunos.nome}}">

        <label for="idade">Idade:</label>
        <input type="text" name="idade" id="idade" value="{{alunos.idade}}">

        <label for="turno">Turno:</label>
        <input type="text" name="turno" id="turno" value="{{alunos.turno}}">

        <label for="anoEnsino">Ano de estudo:</label>
        <input type="text" name="anoEnsino" id="anoEnsino" value="{{alunos.anoEnsino}}">

        <label for="anoEntrada">Ano de entrada:</label>
        <input type="text" name="anoEntrada" id="anoEntrada" value="{{alunos.anoEntrada}}">

