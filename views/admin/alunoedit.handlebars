<div class="card">
  <div class="card-body">
    <h3>Editar aluno:</h3>
    <form class="" action="/admin/aluno/editar" method="POST">

        <label for="nome">Nome:</label>
        <input type="text" name="nome" id="nome" value="{{alunos.nome}}"><br>

        <label for="idade">Idade:</label>
        <input type="text" name="idade" id="idade" value="{{alunos.idade}}"><br>

        <label for="turno">Turno:</label>
        <input type="text" name="turno" id="turno" value="{{alunos.turno}}"><br>

        <label for="anoEnsino">Ano de estudo:</label>
        <input type="text" name="anoEnsino" id="anoEnsino" value="{{alunos.anoEnsino}}"><br>

        <label for="anoEntrada">Ano de entrada:</label>
        <input type="text" name="anoEntrada" id="anoEntrada" value="{{alunos.anoEntrada}}"><br>

        <label for="anoSaida">Ano de saída:</label>
        <input type="text" name="anoSaida" id="anoSaida" value="{{alunos.anoSaida}}"><br>

        <label for="nomePai">Nome do pai:</label>
        <input type="text" name="nomePai" id="nomePai" value="{{alunos.nomePai}}"><br>

        <label for="nomeMae">Nome da mãe:</label>
        <input type="text" name="nomeMae" id="nomeMae" value="{{alunos.nomeMae}}"><br>

        <label for="telefone">Telefone de contato:</label>
        <input type="text" name="telefone" id="telefone" value="{{alunos.telefone}}"><br>
            <button type="submit" name="button" class="btn btn-success mt-4">Editar</button>
    </form>
  </div>
</div>
